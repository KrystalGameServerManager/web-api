{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "TheKrystalShip.KGSM.Api": "Debug"
    }
  },
  "AllowedHosts": "*",
  "KgsmApi": {
    "KgsmPath": "kgsm",
    "SocketPath": "/tmp/kgsm.sock",
    "Port": 5167,
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://127.0.0.1:3000",
      "http://192.168.1.1:3000"
    ],
    "MaxLogBufferLines": 1000,
    "LogCleanupIntervalSeconds": 30
  }
}
